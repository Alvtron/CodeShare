<ContentDialog
    x:Class="CodeShare.Uwp.Dialogs.CommentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="using:CodeShare.Model"
    xmlns:local="using:CodeShare.Uwp.Dialogs"
    xmlns:converters="using:CodeShare.Uwp.Converters"
    xmlns:controls="using:CodeShare.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="Go back"
    Name="ViewModelRoot">

    <ContentDialog.Title>
        <TextBlock>
            <Run Text="Comment by" />
            <Run Text="{x:Bind ViewModel.Comment.User.Name, Mode=OneWay}" />
        </TextBlock>
    </ContentDialog.Title>

    <ContentDialog.Resources>
        <converters:ImageConverter x:Key="ImageConverter" />
        <converters:VisibilityConverter x:Key="VisibillityConverter" />
    </ContentDialog.Resources>

    <StackPanel>
        <!-- New comment edit panel -->
        <controls:CommentBlock Comment="{x:Bind ViewModel.Comment, Mode=OneWay}" />
        <!-- Comment list -->
    </StackPanel>
</ContentDialog>
